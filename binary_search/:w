#include <stdio.h>
int binary_search(int arr[], int n, int len) {
  int r = 0;
  int l = len;
  int steps = 0;

  while (l < r) {
    int mid = l + (r - l) / 2;
    steps++;
    if (arr[mid] == n {
      return mid;
    } 
  }
}

int main(void) {
  int arr[] = {1,2,3,4,5,6,7,8,9};
  int len = sizeof(arr) / sizeof(arr[0]);

  int result = binary_search(arr, 9, len);
  printf("result: %d", result);

  return 0;
}
